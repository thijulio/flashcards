{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@flashcards/frontend/about": ["libs/frontend/about/src/index.ts"],
            "@flashcards/frontend/shared/header": ["libs/frontend/shared/header/src/index.ts"],
            "@flashcards/frontend/shared/data": ["libs/frontend/shared/data/src/index.ts"],
            "@flashcards/frontend/shared/types": ["libs/frontend/shared/types/src/index.ts"],
            "@flashcards/frontend/shared/right-panel": ["libs/frontend/shared/right-panel/src/index.ts"],
            "@flashcards/frontend/register": ["libs/frontend/register/src/index.ts"],
            "@flashcards/frontend/store": ["libs/frontend/store/src/index.ts"],
            "@flashcards/common/types": ["libs/common/types/src/index.ts"],
            "@flashcards/frontend/shared/auth": ["libs/frontend/shared/auth/src/index.ts"],
            "@flashcards/frontend/login": ["libs/frontend/login/src/index.ts"],
            "@flashcards/frontend/app-layout": ["libs/frontend/app-layout/src/index.ts"],
            "@flashcards/api/shared/auth": ["libs/api/shared/auth/src/index.ts"],
            "@flashcards/api/shared/users": ["libs/api/shared/users/src/index.ts"],
            "@flashcards/api/shared/errors": ["libs/api/shared/errors/src/index.ts"],
            "@flashcards/api/shared/types": ["libs/api/shared/types/src/index.ts"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictTemplates": true,
        "strinctInjectionParameters": true
    },
    "exclude": ["node_modules", "tmp"]
}
