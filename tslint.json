{
    "extends": [
        "tslint-plugin-prettier",
        "tslint-config-prettier",
        "tslint-clean-code",
        "tslint-etc",
        "tslint-sonarts",
        "rxjs-tslint-rules",
        "ngrx-tslint-rules/recommended"
    ],
    "rulesDirectory": [
        "node_modules/@nrwl/workspace/src/tslint",
        "node_modules/codelyzer",
        "tslint-consistent-codestyle"
    ],
    "linterOptions": {
        "exclude": [
            "**/*test.ts"
        ]
    },
    "rules": {
        "array-type": [
            true,
            "array"
        ],
        "arrow-return-shorthand": true,
        "callable-types": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "component-class-suffix": true,
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "curly": true,
        "deprecation": {
            "severity": "warn"
        },
        "directive-class-suffix": true,
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "early-exit": true,
        "eofline": true,
        "forin": true,
        "import-blacklist": [
            true,
            "rxjs/Rx",
            "lodash-es",
            [
                ".*\\loader-module$",
                ".*\\module-loader$",
                ".*\\module-loader.module$",
                ".*\\module.loader$"
            ]
        ],
        "import-spacing": true,
        "indent": [
            true,
            "spaces"
        ],
        "interface-over-type-literal": true,
        "label-position": true,
        "max-func-args": 4,
        "max-line-length": [
            true,
            200
        ],
        "member-access": true,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "naming-convention": [
            true,
            {
                "type": "default",
                "format": [
                    "camelCase",
                    "UPPER_CASE"
                ],
                "leadingUnderscore": "forbid",
                "trailingUnderscore": "forbid"
            },
            {
                "type": "variable",
                "modifiers": [
                    "global",
                    "const"
                ],
                "format": [
                    "camelCase",
                    "UPPER_CASE"
                ]
            },
            {
                "type": "functionVariable",
                "modifiers": [
                    "export",
                    "const"
                ],
                "format": "camelCase"
            },
            {
                "type": "parameter",
                "modifiers": "unused",
                "leadingUnderscore": "allow"
            },
            {
                "type": "method",
                "filter": "^toJSON$",
                "format": null
            },
            {
                "type": "property",
                "modifiers": [
                    "public",
                    "static",
                    "const"
                ],
                "format": "UPPER_CASE"
            },
            {
                "type": "type",
                "format": "PascalCase"
            },
            {
                "type": "class",
                "modifiers": "abstract",
                "prefix": "Abstract"
            }
        ],
        "ngrx-no-typed-store": false,
        "no-accessor-recursion": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-collapsible-if": true,
        "no-complex-conditionals": true,
        "no-conflicting-lifecycle": true,
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-else-after-return": true,
        "no-empty": true,
        "no-empty-interface": true,
        "no-eval": true,
        "no-for-each-push": true,
        "no-hardcoded-credentials": false,
        "no-host-metadata-property": true,
        "no-inferrable-types": [
            false,
            "ignore-params"
        ],
        "no-input-rename": true,
        "no-inputs-metadata-property": true,
        "no-map-without-usage": true,
        "no-misused-new": true,
        "no-non-null-assertion": true,
        "no-output-native": true,
        "no-output-on-prefix": true,
        "no-output-rename": true,
        "no-outputs-metadata-property": true,
        "no-redundant-jsdoc": true,
        "no-return-undefined": true,
        "no-shadowed-variable": true,
        "no-static-this": true,
        "no-string-literal": false,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-else": true,
        "no-unnecessary-initializer": true,
        "no-unused": true,
        "no-unused-css": true,
        "no-unused-declaration": {
            "severity": "error"
        },
        "no-unused-expression": true,
        "no-var-keyword": true,
        "nx-enforce-module-boundaries": [
            true,
            {
                "allow": [],
                "depConstraints": [
                    {
                        "sourceTag": "scope:api",
                        "onlyDependOnLibsWithTags": [
                            "scope:api",
                            "scope:common"
                        ]
                    },
                    {
                        "sourceTag": "scope:frontend",
                        "onlyDependOnLibsWithTags": [
                            "scope:frontend",
                            "scope:common"
                        ]
                    },
                    {
                        "sourceTag": "scope:common",
                        "onlyDependOnLibsWithTags": [
                            "scope:common"
                        ]
                    },
                    {
                        "sourceTag": "type:app",
                        "onlyDependOnLibsWithTags": [
                            "type:feature",
                            "type:root-state",
                            "type:ui",
                            "type:common",
                            "type:shared"
                        ]
                    },
                    {
                        "sourceTag": "type:feature",
                        "onlyDependOnLibsWithTags": [
                            "type:shared",
                            "type:root-state",
                            "type:common"
                        ]
                    },
                    {
                        "sourceTag": "type:common",
                        "onlyDependOnLibsWithTags": [
                            "type:common"
                        ]
                    },
                    {
                        "sourceTag": "type:root-state",
                        "onlyDependOnLibsWithTags": [
                            "type:shared"
                        ]
                    },
                    {
                        "sourceTag": "type:shared",
                        "onlyDependOnLibsWithTags": [
                            "type:shared",
                            "type:common"
                        ]
                    },
                    {
                        "onlyDependOnLibsWithTags": [
                            "*"
                        ],
                        "sourceTag": "*"
                    }
                ],
                "enforceBuildableLibDependency": true
            }
        ],
        "object-literal-sort-keys": false,
        "object-shorthand-properties-first": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "prefer-const": true,
        "prefer-const-enum": true,
        "prefer-dry-conditionals": true,
        "prefer-on-push-component-change-detection": true,
        "prefer-output-readonly": true,
        "prefer-while": true,
        "prettier": true,
        "quotemark": [
            true,
            "single"
        ],
        "radix": true,
        "rxjs-no-exposed-subjects": {
            "severity": "error"
        },
        "rxjs-no-internal": {
            "severity": "error"
        },
        "rxjs-no-subject-unsubscribe": {
            "severity": "error"
        },
        "rxjs-no-unsafe-takeuntil": {
            "severity": "error"
        },
        "semicolon": [
            true,
            "always"
        ],
        "template-banana-in-box": true,
        "template-no-negated-async": true,
        "template-use-track-by-function": true,
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "try-catch-first": true,
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "member-variable-declaration",
            "arrow-parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "unified-signatures": true,
        "use-lifecycle-interface": true,
        "use-pipe-transform-interface": true,
        "variable-name": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}